<h2>Store: <%= @store.name() %></h2>
<hr>

<% if @brand %>
<h3>Available Brands: <%= @brand.name %> </h3>

<% else %>
<p><strong><em>No brands available!</em></strong></p>
<br>

<% end %>
<br>

<form action="/store/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>Select brand to assign to this store</p>
  <select id='brand_id' name='brand_id' type='text'>
    <% @brands.each() do |brand| %>
      <option value="<%= brand.id()%>"> <%= brand.name() %> </option>
    <% end %>
  </select>
  <button class = "btn btn-warning active" type="submit">Update</button>
</form>


</form>




<h4>Delete store</h4>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class = "btn btn-danger">Delete</button>
</form>
<br>
<h4>Rename Store</h4>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input type="text" name="name">
  <button type="submit" class = "btn btn-primary">Update</button>
</form>
