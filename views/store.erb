<h2><%= @store.name() %></h2>
<hr>

<% if @store.brands().any?() %>
     <h3>Our brands</h3>
     <ul>
       <% @store.brands().each() do |brand| %>
         <li><%= brand.name() %></li>
       <% end %>
     </ul>
   <% else %>
     <p>No brands available, be the first to add a brand!</p>
   <% end %>
<br>

<form action="/store/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>Select brand to assign to this store</p>
  <select id='brand_id' name='brand_id' type='text'>
    <% @brands.each() do |brand| %>
      <option value="<%= brand.id()%>"> <%= brand.name() %> </option>
    <% end %>
  </select>
  <form action="/store/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <button class = "btn btn-warning active" type="submit">Add</button>
</form>

<h4>Delete store</h4>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class = "btn btn-danger">Delete</button>
</form>
<br>
  <form action="/store/rename/<%= @store.id() %>" method="post">
    <button class = "btn btn-primary" type="submit">Rename <%= @store.name() %></button>
  </form>
</div>
